<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-heading">
                        <h6 class="card-title">wall</h6>
                    </div>
                    <div class="card-body">
                        <%= form_for @post, html: { multipart: true } do |form| %>
                        <% form.label :content %>
                        <%= form.text_area :content, id: :post_content, class: 'form-control', placeholder: 'Write on the wall', size: "colsxrols" %>
                        <p>
                            <%# form.file_field :image %>
                            <%# form.hidden_field :image_cache %>
                        </p>
                        <% if @post.errors.full_messages.any? %>
                        <p class="errors">
                            <%= "Post could not be saved. #{@post.errors.full_messages.join('. ')}" %>
                        </p>
                        <% end %>
                        <%= form.submit 'Submit', class: 'btn btn-outline-secondary' %>
                        <div class="float-right">
                            <div class="btn-group">
                                <label class="btn btn-outline-secondary">
                                    Add an image!
                                    <span style="display:none;">
                                        <%= form.file_field :image %>
                                        <%= form.hidden_field :image_cache %>
                                    </span>
                                </label>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
                <div class="card post">
                    <article class="timeline">
                        <h3>
                            Recent posts
                        </h3>
                        <ul class="posts">
                            <%= render @user_timeline %>
                        </ul>
                    </article>
                </div>
            </div>
            <div class="col-lg-4">

            </div>
        </div>
    </div>
</section>